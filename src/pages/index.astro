---
import Layout from "../components/Layout.astro";
const links = [
  { name: 'GitHub', url: 'https://github.com/vorkytaka' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/' },
  { name: 'Email', url: 'mailto:hello@vorky.dev' },
  { name: 'CV / Resume', url: '/resume.pdf' },
];
---
<Layout title="Vorky" description="Software engineer — minimalist, fast, and thoughtful web.">
  <section class="stack">
    <h1>Vorky</h1>
    <p>Software engineer crafting clean, fast, and reliable web experiences. I like small surfaces, sharp edges, and boring tech that lasts.</p>
    <p>Currently exploring Astro, edge runtimes, and performance-first UX.</p>

    <div class="links" role="navigation" aria-label="Main links">
      {links.map((l) => (
        <a class="link" href={l.url} target={l.url.startsWith('http') ? '_blank' : undefined} rel={l.url.startsWith('http') ? 'noopener noreferrer' : undefined}>{l.name}</a>
      ))}
    </div>

    <p class="footer">© {new Date().getFullYear()} Vorky</p>
  </section>
</Layout>
